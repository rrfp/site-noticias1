<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redefinir Senha</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background: #f5f5f5;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }
    .reset-container {
      width: 400px;
      background: white;
      padding: 25px;
      border-radius: 10px;
      box-shadow: 0 0 15px rgba(0,0,0,0.2);
    }
    h2 {
      margin-bottom: 20px;
      text-align: center;
    }
    input {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border-radius: 5px;
      border: 1px solid #ccc;
    }
    button {
      width: 100%;
      padding: 10px;
      background: #007bff;
      border: none;
      color: white;
      border-radius: 5px;
      cursor: pointer;
      font-size: 16px;
    }
    button:hover { background: #0056b3; }
    #msg {
      margin-top: 10px;
      text-align: center;
      font-size: 14px;
      font-weight: bold;
    }
  </style>
</head>
<body>

<div class="reset-container">
  <h2>Redefinir Senha</h2>

  <form id="resetForm">
    <input type="password" id="pass" placeholder="Nova Senha" required minlength="6">
    <input type="password" id="confirm" placeholder="Confirmar Senha" required minlength="6">
    <button type="submit">Salvar Nova Senha</button>
  </form>

  <p id="msg"><%= error ? error : "" %></p>
  <a href="/login" style="display:block; text-align:center; margin-top:15px;">⬅ Voltar ao Login</a>
</div>

<script>
  const form = document.getElementById("resetForm");
  const msg = document.getElementById("msg");
  const token = "<%= token %>"; // token do servidor

  form.addEventListener("submit", async (e) => {
    e.preventDefault();

    const password = document.getElementById("pass").value;
    const confirm = document.getElementById("confirm").value;

    if (password !== confirm) {
      msg.innerText = "As senhas não coincidem!";
      msg.style.color = "red";
      return;
    }

    msg.innerText = "Salvando...";
    msg.style.color = "black";

    try {
      const res = await fetch(`/auth/reset/${token}`, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ password, confirm })
      });

      if (res.redirected) {
        window.location.href = res.url;
        return;
      }

      const data = await res.json().catch(() => ({}));

      msg.innerText = data.message || "Senha alterada com sucesso!";
      msg.style.color = data.success ? "green" : "red";

      if (data.success) {
        setTimeout(() => window.location.href = "/auth/login", 2000);
      }

    } catch (err) {
      console.error(err);
      msg.innerText = "Erro no servidor. Tente novamente.";
      msg.style.color = "red";
    }
  });
</script>

</body>
</html>
